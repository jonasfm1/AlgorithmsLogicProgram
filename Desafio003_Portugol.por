programa
{
	
	funcao inicio()
	{
		inteiro value
		escreva("Digite um valor: ")
		leia(value)

		escreva("O antecessor de "+value+" é "+ (value - 1)+"\n")
		escreva("O sucessor de "+value+" é "+ (value + 1))
	}
}
